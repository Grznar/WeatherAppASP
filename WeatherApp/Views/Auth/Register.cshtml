@using WeatherApp.Application.Common.Dto
@model RegisterVM
<section class="vh-75">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Register</h3>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                                
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4 align-items-center align-text-center pt-3">
                                <div class="g-recaptcha" data-sitekey="6LfcsBQrAAAAAHed68YeJdD9rzDxOpn6Tkf5KRyJ"></div>
                            </div>

                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Register</button>
                        </form>
                        <hr class="my-4">
                        <div class="mt-3  text-center">
                            <a class="small text-muted text-white"> Already have an account?</a>
                            <div class="text-end">
                                <a class="text-end" asp-action="Login">Login</a>
                            </div>
                            
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>